# Render (Docker) runtime env for production
PORT=8080
PRISMA_PROVIDER=postgresql
# Neon Postgres connection string (use sslmode=require)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB?sslmode=require"

# Auth/session
AUTH_SECRET=change_me
COOKIE_NAME=clinic_sess
COOKIE_SECURE=true

# CORS (comma-separated origins)
CORS_ORIGIN=https://your-pages-subdomain.pages.dev,https://your-custom-domain.tld

# Uploads
UPLOAD_MAX_MB=5

# Optional seed admin (only if you run seeding manually)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_FULL_NAME=Admin User