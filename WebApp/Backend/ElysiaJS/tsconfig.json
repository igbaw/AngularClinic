{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["bun-types"],
    "allowJs": false,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "baseUrl": "."
  },
  "include": ["src", "test"]
}